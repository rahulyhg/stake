<?xml version="1.0" encoding="UTF-8" ?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->

<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.wohlig.stake" version="1.0.0" versionCode="0">

    <name>Stake</name>

    <description>
        App for stakes
    </description>

    <author href="http://www.wohlig.com" email="info@wohlig.com">
        Wohlig Technologies
    </author>
    <content src="index.html" />
    <access origin="*" />

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="phonegap-version" />
    <preference name="permissions" value="none" />
    <preference name="fullscreen" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="android-installLocation" value="internalOnly" />
    <preference name="ErrorUrl" value="" />
    <preference name="BackgroundColor" value="0x000000" />
    <preference name="KeepRunning" value="true" />
    <preference name="splash-screen-duration" value="3000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ios-statusbarstyle" value="black-translucent" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="target-device" value="universal" />
    <preference name="LoadUrlTimeoutValue" value="200000" />
    <preference name="deployment-target" value="6.1" />


    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="res/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="res/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="res/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
    <!-- iPad -->
    <icon src="res/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="res/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="res/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="res/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="res/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />
    <!-- iPad -->
    <icon src="res/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="res/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="res/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="res/ios/icon-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="res/ios/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

    <icon src="res/android/logo.png" gap:platform="android" />


    <!-- you can use any density that exists in the Android project -->
    
    <gap:splash src="res/screens/android/screen.png" />

    <gap:splash src="res/screens/android/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="res/screens/android/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="res/screens/android/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="res/screens/android/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    <gap:splash src="res/screens/android/fr-xhdpi.png" gap:platform="android" gap:qualifier="fr-xhdpi" />
    <gap:splash src="res/screens/android/portrait-xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
    <gap:splash src="res/screens/android/landscape-xxhdpi.png" gap:platform="android" gap:qualifier="land-xxhdpi" />
    


    <!-- iPhone and iPod touch -->
    <gap:splash src="res/screens/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screens/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="res/screens/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <gap:splash src="res/screens/ios/Default-667h@2x.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="res/screens/ios/Default-Portrait-736h@3x.png" gap:platform="ios" width="1242" height="2208" />
    <gap:splash src="res/screens/ios/Default-Landscape-736h@3x.png" gap:platform="ios" width="2208" height="1242" />

    <!-- iPad -->
    <gap:splash src="res/screens/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="res/screens/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="res/screens/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="res/screens/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />



</widget>